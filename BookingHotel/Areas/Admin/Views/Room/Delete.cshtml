@model BookingHotel.Models.Room
<h2>Delete Room</h2>
<a asp-action="index">Return to home</a>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Bạn có chắc muốn xoá phòng số @Model.RoomNumber?</p>
    <button type="submit" class="btn btn-danger mt-3">Xoá</button>
</form>