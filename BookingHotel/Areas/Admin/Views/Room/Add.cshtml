@model BookingHotel.Models.Room

@{
    ViewData["Title"] = "Add Room";
}

<h2>Add Room</h2>

<form asp-action="Add" asp-controller="Room" method="post">
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId">RoomTypes</label>
        <select asp-for="RoomTypeId" asp-items="ViewBag.RoomTypes" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="PricePerNight"></label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="IsAvailable" value="false" />
    <input type="hidden" asp-for="HotelId" value="@ViewBag.HotelId" />
    <button type="submit" class="btn btn-primary mt-3">Add</button>
</form>