@model IEnumerable<BookingHotel.Models.BookingDetail>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết đặt phòng</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .page-title {
            text-align: center;
            margin-top: 30px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="page-title">Chi tiết đặt phòng</h2>

        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Phòng đã đặt</th>
                    <th>Loại phòng</th>
                    <th>Số lượng</th>
                    <th>Người lớn</th>
                    <th>Trẻ em</th>
                    <th>Check In</th>
                    <th>Check Out</th>
                    <th>Tổng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td><img src="@detail.roomType?.ImageUrl" alt="Room Image" width="150" height="150"></td>
                        <td>@detail.roomType?.Name</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.Adults</td>
                        <td>@detail.Children</td>
                        <td>@detail.CheckInDate.ToString("d")</td>
                        <td>@detail.CheckOutDate.ToString("d")</td>
                        <td>@detail.Total.ToString("#,##0") VNĐ</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
