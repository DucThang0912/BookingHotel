@model BookingHotel.Models.Booking

<h1>Checkout</h1>

<div>
    <h2>Booking Details</h2>
    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label asp-for="OrderName">Your Name</label>
            <input asp-for="OrderName" class="form-control" required />
            <span asp-validation-for="OrderName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes (if any)</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Place Booking</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
