@model BookingHotel.Models.Booking

<h1>CheckoutNow</h1>

<div>
    <h2>Booking Details</h2>
    <form asp-action="CheckoutNow" method="post">
        <input type="hidden" name="RoomId" value="@ViewBag.RoomId" />
        <input type="hidden" name="CheckInDate" value="@ViewBag.CheckInDate" />
        <input type="hidden" name="CheckOutDate" value="@ViewBag.CheckOutDate" />
        <input type="hidden" name="Adults" value="@ViewBag.Adults" />
        <input type="hidden" name="Children" value="@ViewBag.Children" />
        <div class="form-group">
            <label asp-for="OrderName">Your Name</label>
            <input asp-for="OrderName" class="form-control" required />
            <span asp-validation-for="OrderName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes (if any)</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Place Booking</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
