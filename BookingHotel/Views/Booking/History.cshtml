@model List<BookingHotel.Models.Booking>

<h1>Booking History</h1>

@if (Model.Count == 0)
{
    <p>No bookings found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Tên người đặt</th>
                <th>Số điện thoại</th>
                <th>Ghi chú</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.OrderName</td>
                    <td>@booking.PhoneNumber</td>
                    <td>@booking.Notes</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@booking.Id">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
