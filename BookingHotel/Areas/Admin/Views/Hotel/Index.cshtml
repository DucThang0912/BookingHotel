@model IEnumerable<BookingHotel.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<p class="pt-3">
    <a asp-action="Add" class="btn btn-primary">Add Hotel</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hotel Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>Region</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Address</td>
                    <td>@item.RegionId</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="Hotel Image" class="img-fluid" style="max-width: 200px; max-height: 200px" />
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>