@model BookingHotel.Models.Room

@{
    ViewData["Title"] = "Update Room";
}

<h2>Edit Room</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RoomTypeId" />
    <input type="hidden" asp-for="IsAvailable" value="false" />
    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
