@model BookingHotel.Models.Room

@{
    ViewData["Title"] = "Update Room";
}

<h2>Edit Room</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="HotelId" value="@ViewBag.HotelId" />

    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId" class="control-label"></label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes"></select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerNight" class="control-label"></label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>